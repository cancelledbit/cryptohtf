{% extends '@!EasyAdmin/layout.html.twig' %}

{# Let\'s remove/empty the header #}
{% block content_header_wrapper %} {% endblock content_header_wrapper %}

{# The main page content block #}
{% block main %}
    {% if pass %}
        <h3> Новый ключ: {{ pass }} </h3>
    {% else %}
        <form action="{{ ea_url().setRoute('changePassword') }}" method="post">
            <input type="hidden" name="id" value="{{ user.getId() }}">
            <div>
                <label for="inputPassword2">Старый ключ</label>
                <input type="password" class="form-control" id="inputPassword2" placeholder="Старый ключ" name="oldSecret" autocomplete="new-password">
            </div>
            <button type="submit" class="btn btn-primary mx-3">Сменить</button>
        </form>
    {% endif %}

{% endblock main %}

{# Let\'s remove/empty the footer #}
{% block content_footer_wrapper %} {% endblock content_footer_wrapper %}